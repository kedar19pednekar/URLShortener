<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>URL Shortener</title>
  <style>
  .transp {
    opacity: 0;
  }
  .transp:target {
    opacity: 1;
  }
  </style>
</head>
<body>
  <div style="margin-left:40px; margin-right:50px; margin-top:20px;">
    <h1 style="margin-left: 0%;">URL Shrinker</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="fullUrl" class="sr-only">Url</label>
      <input required placeholder="Enter a full valid URL" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <button class="btn btn-success" type="submit" style="margin-right:30px;">Shrink</button> 
      <div class="transp" id="already" style="color:#ffffff; font-size: 20px;background-color: rgb(69, 69, 192);">URL already present, Enter a new URL</div>
    </form>
    
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Short URL Clicks</th>
          <!-- from here  -->
          <th>Delete Entry</th>
          <!-- to here -->
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%=shortUrl.short%></a></td>
            <td style="text-align:center;"><%= shortUrl.clicks %></td>
            <!-- from here  --> 
            <td><button  type="button" style="background-color: #f44336; color: #ffffff; border-radius: 4px;" onclick='dltFunction("<%=shortUrl.short%>")'>Revoke</button></td>
            
            <!-- from here  -->
          </tr>
        <%})%>
      </tbody>
    </table>
  </div>
</body>
<script>
  function dltFunction(dltKeyByShort) {
    //console.log(dltKeyByShort);

    return fetch('/' + dltKeyByShort, {
      method: 'delete'
    })
    .then(location.reload());
  }
</script>
</html>